<mvc:View
  controllerName="yt_joule.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Page id="detailPage" title="{i18n>/flightDetailTitle}">
    <headerContent>
      <Button icon="sap-icon://nav-back" press="onNavBack"/>
    </headerContent>

    <content>
      <SimpleForm editable="true" labelSpanL="4" labelSpanM="4" columnsL="1" columnsM="1">
        <Label text="{i18n>/colFlightNumber}"/>
        <Input value="{flightNumber}" id="flightNumberInput"/>

        <Label text="{i18n>/colDeparture}"/>
        <Input value="{departure}"/>

        <Label text="{i18n>/colArrival}"/>
        <Input value="{arrival}"/>

        <Label text="{i18n>/colDepartureTime}"/>
        <DateTimePicker value="{departureTime}" displayFormat="yyyy-MM-dd HH:mm"/>

        <Label text="{i18n>/colArrivalTime}"/>
        <DateTimePicker value="{arrivalTime}" displayFormat="yyyy-MM-dd HH:mm"/>

        <Label text="{i18n>/colStatus}"/>
        <Input value="{status}"/>

        <Label text="{i18n>/colAirline}"/>
        <Input value="{airline/name}" editable="false"/>
      </SimpleForm>

      <HBox justifyContent="End" class="sapUiSmallMarginTop">
        <Button text="{i18n>/edit}" press="onEdit" id="editBtn"/>
        <Button text="{i18n>/save}" press="onSave" id="saveBtn"/>
        <Button text="{i18n>/delete}" press="onDelete" type="Reject"/>
      </HBox>
    </content>
  </Page>
</mvc:View>
